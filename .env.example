# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Ultimate Voice Bridge"
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
REDIS_URL=redis://localhost:6379
DATABASE_URL=sqlite:///./voice_bridge.db

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# LM Studio Configuration (Local LLM)
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_API_KEY=lm-studio

# Whisper Configuration
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
WHISPER_DEVICE=cpu  # Options: cpu, cuda
WHISPER_LANGUAGE=auto  # Options: auto, en, es, fr, etc.

# TTS Configuration
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
TTS_VOCODER=vocoder_models/en/ljspeech/hifigan_v2
TTS_SPEAKER_ID=0
ENABLE_VOICE_CLONING=false

# Audio Configuration
MAX_AUDIO_DURATION=300  # seconds
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024

# Security Configuration
CORS_ORIGINS=["http://localhost:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_PERFORMANCE_LOGGING=true

# Feature Flags
ENABLE_REAL_TIME_STT=true
ENABLE_STREAMING_TTS=true
ENABLE_VOICE_ACTIVITY_DETECTION=true
ENABLE_NOISE_REDUCTION=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_CONCURRENT_SESSIONS=10

# Development
DEBUG=true
RELOAD=true